{
  "architecture": {
      "output_units": 1,
      "neurons_per_layer": [[1], [6]]
  },
  "functions": {
      "hidden": "relu",
      "output": "sigmoid",
      "loss": "binary_crossentropy"
  },
  "training": {
      "epochs": 5000,
      "search_type": "random",
      "number_random_trials": 9,
      "learning_rate": [0.001, 0.05],
      "momentum": [0.75, 0.95],
      "regularization": [0.01, 0.000001],
      "batch": {
          "batch_size": "full",
          "drop_last": true
      },
      "early_stopping": {
          "enabled": true,
          "patience": 20,
          "monitor": "val_loss"
      },
      "splitting": {
          "tr": 0.75,
          "vl": 0.25
      }
  },
    "validation": {
        "method": "hold_out"
  },
  "initialization": {
      "method": "random"
  },
  "paths": {
      "train_data": "../../MONK files/monks-1.train",
      "test_data": "../../MONK files/monks-1.test"
  },
  "general": {
      "seed": 42
  }
}
