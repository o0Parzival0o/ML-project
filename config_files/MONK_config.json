{
  "architecture": {
      "output_units": 1,
      "neurons_per_layer": [3]
  },
  "functions": {
      "hidden": "tanh",
      "hidden_param": 1.0,
      "output": "sigmoid",
      "output_param": 1.0,
      "loss": "binary_crossentropy"
  },
  "training": {
      "epochs": 5000,
      "learning_rate": 0.01,
      "momentum": 0.85,
      "regularization": 0.0001,
      "batch": {
          "batch_size": "full",
          "drop_last": true
      },
      "early_stopping": {
          "enabled": true,
          "patience": 10,
          "monitor": "val_loss"
      },
      "splitting": {
          "tr": 0.75,
          "vl": 0.25,
          "ts": 0.00
      }
  },
  "validation": {
    "method": "hold_out"
  },
  "initialization": {
      "method": "xavier"
  },
  "paths": {
      "train_data": "../../MONK files/monks-1.train",
      "test_data": "../../MONK files/monks-1.test"
  },
  "general": {
      "seed": 42
  }
}
