{
  "architecture": {
      "output_units": 1,
      "neurons_per_layer": [[2], [6]]
  },
  "functions": {
      "hidden": "relu",
      "hidden_param": 0.0,
      "output": "sigmoid",
      "output_param": 1.0,
      "loss": "MSE"
  },
  "training": {
      "epochs": 5000,
      "search_type": "random",
      "number_random_trials": 16,
      "learning_rate": {
          "eta": 0.01,
          "min_rate": 100,
          "decay_factor": 0.0001
      },
      "momentum": [0.75, 0.95],
      "regularization": [0.01, 0.000001],
      "batch": {
          "batch_size": 32,
          "drop_last": true
      },
      "early_stopping": {
          "enabled": true,
          "patience": 20,
          "monitor": "val_loss",
          "epsilon_loss_up": 0.002,
          "epsilon_loss_down": 0.001,
          "epsilon_accuracy_up": 0.005,
          "epsilon_accuracy_down": 0.01
      },
      "splitting": {
          "tr": 0.75,
          "vl": 0.15,
          "ts": 0.10
      }
  },
    "validation": {
        "method": "hold_out",
        "folds": 5
  },
    "assessment": {
        "method": "hold_out",
        "folds": 5
  },
  "initialization": {
      "method": "fan_in"
  },
  "paths": {
      "train_data": "../../MONK files/monks-1.train",
      "test_data": "../../MONK files/monks-1.test"
  },
  "general": {
      "seed": 42
  }
}
