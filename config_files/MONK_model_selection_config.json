{
  "architecture": {
      "output_units": 1,
      "neurons_per_layer": [[2,2], [4,4]]
  },
  "functions": {
      "hidden": "relu",
      "hidden_param": 0.0,
      "output": "sigmoid",
      "output_param": 1.0,
      "loss": "MSE"
  },
  "training": {
      "epochs": 5000,
      "search_type": "random",
      "number_random_trials": 9,
      "learning_rate": [0.001, 0.1],
      "momentum": [0.75, 0.95],
      "regularization": [0.01, 0.000001],
      "decay_factor": 0.0001,
      "batch": {
          "batch_size": "full",
          "drop_last": true
      },
      "early_stopping": {
          "enabled": true,
          "patience": 20,
          "monitor": "val_loss"
      },
      "splitting": {
          "tr": 0.75,
          "vl": 0.15,
          "ts": 0.10
      }
  },
    "validation": {
        "method": "k_fold_cv",
        "folds": 5
  },
    "assessment": {
        "method": "hold_out",
        "folds": 5
  },
  "initialization": {
      "method": "fan_in"
  },
  "paths": {
      "train_data": "../../MONK files/monks-1.train",
      "test_data": "../../MONK files/monks-1.test"
  },
  "general": {
      "seed": 42
  }
}
